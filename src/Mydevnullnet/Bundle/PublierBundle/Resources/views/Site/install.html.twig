{% extends 'MydevnullnetPublierBundle::backend/layout.html.twig' %}
{% block title %}
Set up
{% endblock %}
{% block content %}
<form class="form-horizontal" action="" method="post">
    <fieldset>
        <legend>Site</legend>

        <div class="control-group">
            <label class="control-label" for="inputName">Name</label>
            <div class="controls">
                <input type="text" id="inputName" placeholder="Name" name="name" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputDescription">Description</label>
            <div class="controls">
                <input class="input-xxlarge" type="text" id="inputDescription" placeholder="Description ( optional )" name="description" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputDomain">Domain</label>
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on">www.</span><input type="text" id="inputDomain" placeholder="example.com" name="domain" />
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputSlugs">Use Slugs</label>
            <div class="controls">
                <label class="checkbox">
                    <input id="inputSlugs" name="use_slugs" type="checkbox" checked="checked" />
                </label>
            </div>
        </div>
    </fieldset>
    <fieldset>
        <legend>User</legend>

        <div class="control-group">
            <label class="control-label" for="inputEmail">Email</label>
            <div class="controls">
                <input type="text" id="inputEmail" placeholder="Email" name="email" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputPassword">Password</label>
            <div class="controls">
                <input type="text" id="inputPassword" placeholder="Password" name="password" />
            </div>
        </div>
    </fieldset>
    <div class="control-group">
        <div class="controls">
            <input class="btn" type="submit" name="submit" value="Save" />
        </div>
    </div>
</form>
{% endblock %}
